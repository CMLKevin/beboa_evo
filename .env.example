# Discord Bot Configuration
# Get these from https://discord.com/developers/applications

# Bot token from Discord Developer Portal
DISCORD_TOKEN=your_bot_token_here

# Your Discord application's client ID
CLIENT_ID=your_client_id_here

# Your Discord server (guild) ID
GUILD_ID=your_guild_id_here

# Channel IDs
# The #log-in channel where /checkin is allowed
CHECKIN_CHANNEL_ID=your_checkin_channel_id_here

# The #beboas-command-center channel for reward notifications
NOTIFICATION_CHANNEL_ID=your_notification_channel_id_here

# Role ID to ping when rewards are redeemed (e.g., @bebebebebebe)
ADMIN_ROLE_ID=your_admin_role_id_here

# ============================================
# OpenRouter AI Configuration (for Beboa chat)
# ============================================

# Your OpenRouter API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Model to use (default: dx-ai/grok-4.1-fast)
# Other options: anthropic/claude-3-haiku, meta-llama/llama-3-8b-instruct, etc.
# See https://openrouter.ai/models for full list
OPENROUTER_MODEL=x-ai/grok-4.1-fast

# Maximum tokens in response (default: 500)
OPENROUTER_MAX_TOKENS=500

# Temperature for response creativity 0.0-2.0 (default: 1)
OPENROUTER_TEMPERATURE=1

# ============================================
# Chat Feature Settings
# ============================================

# Cooldown between chat messages per user in seconds (default: 1 second)
CHAT_COOLDOWN_SECONDS=1

# Maximum conversation history to maintain for all users (default: 50 messages total)
CHAT_MAX_HISTORY=150

# Enable/disable chat feature (default: true)
CHAT_ENABLED=true
